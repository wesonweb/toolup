<div class="container">
  <div class="row mt-4 d-flex justify-content-center">
    <div class="col-sm-10 col-md-6 mb-5">
      <h1>Lend a tool</h1>
      <p>Add the details below of the tool that you'd like to lend to others</p>
      <%= simple_form_for @tool do |f| %>
        <%= f.input :name, required: true, prompt: 'choose a tool...', collection: Tool::NAMES %>
        <%= f.input :price, required: true, hint: 'enter the price per day', placeholder: 'eg Â£10' %>
        <%= f.input :address, required: true, hint: 'Enter your postcode', placeholder: 'eg NW6 7QA' %>
        <%= f.input :description, required: true, hint: 'describe the tool you are lending', placeholder: 'eg electric lawnmower' %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, "Add your tool",  class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
