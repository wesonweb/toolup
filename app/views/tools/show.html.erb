<div class="tool-body py-5">
  <div class="container-sm">

    <div class="row justify-content-center p-2">
      <div class="col col-md-7 col-lg-5">
        <div class="header mb-3">
          <h1><%= @tool.name %></h1>
        </div>
        <%= image_tag @tool.image_url, alt: "#{@tool.description}", class: "mb-4 img-fluid tool-show-img" %>
        <div class="tool-description my-3">
          <h2>Tool description</h2>
          <p><%= @tool.description %></p>
        </div>
        <div class="tool-location mt-3">
          <h3>Location</h3>
          <p> This <%= @tool.name%> is located at <%= @tool.address %> </p>
          <div style="width: 100%; height: 500px;"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
        <div class="tool-reviews mt-3">
          <h3 class="mt-3">Reviews</h3>
          <p> See what our users said about this <%= @tool.name %> </p>
          <ul>
           <% if @reviews.empty? %>
             <p> No reviews yet</p>
             <% else %>
             <% @reviews.each do |review| %>
              <% review.rating.times do %>
                <i class="fas fa-star star-yellow"></i>
             <% end %>

               <p class="mb-0"><%= review.comment %></p>
              <% end %>
           <% end %>
          </ul>
        </div>
        <div class="col col-md-7 col-lg-5">
          <i class="fa-regular fa-hand-point-left me-1"></i><%= link_to "back to all tools".html_safe, tools_path, class: "" %>
        </div>
      </div>
      <div class="col col-md-5 col-lg-4 mt-5">
        <div class="tool-booking-form sticky-top">
          <%= render "bookings/booking_form" %>
        </div>
      </div>
    </div>

  </div>
</div>
